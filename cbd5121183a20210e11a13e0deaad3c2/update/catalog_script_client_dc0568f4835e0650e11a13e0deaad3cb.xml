        <script><![CDATA[function onChange(control, oldValue, newValue, isLoading, isTemplate) {
  if (isLoading || newValue === '') {
    return;
  }
  
  // Get the current date and set the time to the start of the day
  var now = new Date();
  now.setHours(0, 0, 0, 0);
  // Convert the new value to a Date object
  var deliveryDate = new Date(newValue);
  deliveryDate.setHours(0, 0, 0, 0);
  // Set time to the start of the day to match 'now'
  // Check if the Delivery Date is today or in the past
  if (deliveryDate <= now) {
    // Show an alert message
    g_form.addErrorMessage('Delivery date cannot be today or in the past');
    // Optionally, clear the Delivery Date field
    g_form.setValue('delivery_date', '');
  } else {
    // Clear any existing error messages
    g_form.clearMessages();
  }
}]]></script>
