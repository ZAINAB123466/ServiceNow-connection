        <script><![CDATA[(function executeRule(current, previous /*null when async*/) {
    gs.debug('Test');

    // Vérifie si le champ de la date de livraison a changé
    if (current.delivery_date.changes()) {
        var deliveryDate = new GlideDateTime(current.delivery_date);
        var currentDate = new GlideDateTime();
		
        // Compare la date de livraison avec la date actuelle
        if (deliveryDate.compareTo(currentDate) <= 0) {
            gs.addErrorMessage('Delivery date cannot be today or in the past.');
            current.setAbortAction(true); // Annule l'opération si la date est invalide
        } else {
            // Utilisez g_form.addInfoMessage pour afficher le message d'information de manière asynchrone
            g_form.addInfoMessage(gs.getMessage('Delivery date is valid.'));
            
            // Utilisez gs.debug pour afficher le message de débogage de manière asynchrone
            gs.debug('Delivery date is valid. Console message: This message is from the business rule.');
        }
    }
})(current, previous);
]]></script>
